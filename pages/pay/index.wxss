/* pages/pay/index.wxss */
page {
  padding-bottom: 80rpx;
}
.recevie_address_row {
  border-bottom: 1px solid #ddd;
  padding: 20rpx;
}
.recevie_address_row .user_info .user_info_item {
  margin-top: 10rpx;
}
.recevie_address_row .user_info .user_info_detail {
  font-size: 18px;
  font-weight: bolder;
  margin-bottom: 10rpx;
}
.cart_content {
  background-color: #fff;
}
.cart_content .cart_main {
  padding: 2rpx 10rpx 10rpx 10rpx;
}
.cart_content .cart_main .cart_item {
  display: flex;
  background-color: #fff;
  margin: 20rpx;
  padding-right: 20rpx;
  border-radius: 10rpx;
  box-shadow: 2rpx 5rpx 10rpx 5rpx #eee;
}
.cart_content .cart_main .cart_item .cart_img_wrap {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx;
}
.cart_content .cart_main .cart_item .cart_img_wrap image {
  width: 70%;
  border-radius: 10%;
}
.cart_content .cart_main .cart_item .cart_info_wrap {
  flex: 6;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_nme {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-weight: 500;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .goods_price {
  color: #fa90c2;
  font-style: 34rpx;
  font-weight: 600;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool {
  display: flex;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool .goods_num {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .icon-gouwuche1 {
  font-size: 120px;
  opacity: 0.2;
  color: gray;
  text-align: center;
  margin-top: 30%;
}
.cart_content .cart_main .tt {
  font-size: 40rpx;
  text-align: center;
  opacity: 0.3;
  color: gray;
  margin-top: 10%;
}
.footer_tool {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-top: 1px solid #ddd;
  padding-left: 30rpx;
}
.footer_tool .total_price_wrap {
  flex: 5;
  display: flex;
  align-items: center;
}
.footer_tool .total_price_wrap .total_price .total_price_text {
  color: #f688bd;
  font-weight: bolder;
  font-size: 34rpx;
}
.footer_tool .order_pay_wrap {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  background-image: linear-gradient(90deg, #f688bd, #ffc0cb);
  margin: 10rpx;
  border-radius: 20px;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
}
